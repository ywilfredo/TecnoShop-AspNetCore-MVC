@model TecnoShop.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "EditarProducto";
}

<section class="container seccion">
    
    <hr />
    <div class="row">
        <div class="col-md-6 mb-5">
            <div class="row mb-3 text-center">
                <h4>Editar Producto</h4>
            </div>
            <div class="row mb-4">
                <img src="@Model.ImagenUrl" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <h3>@Model.Nombre</h3>

            </div>
            <form asp-action="EditarProducto" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ProductoId" />
                <input type="hidden" asp-for="ImagenUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Especificaciones" class="control-label"></label>
                    <textarea asp-for="Especificaciones" class="form-control" placeholder="escriba las especificaciones aquí.." id="floatingTextarea" style="height: 100px;"></textarea>
                    <span asp-validation-for="Especificaciones" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input asp-for="ArchivoImagen" accept="image/*" multiple>
                    <span asp-validation-for="ArchivoImagen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">Precio en $us</label>
                    <input asp-for="Precio" class="form-control" type="number" name="precio" value="@Model.PrecioP">
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-select sform-control" asp-items="Model.CategoriasItems"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MarcaId" class="control-label"></label>
                    <select asp-for="MarcaId" class="form-select sform-control" asp-items="Model.MarcasItems"></select>
                    <span asp-validation-for="MarcaId" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="Disponible" class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Disponible
                    </label>
                </div>
                <div class="form-group form-check">
                    <input asp-for="Destacado" class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Destacado
                    </label>
                </div>

                <br />

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index"> Atrás</a>
                </div>
            </form>

      </div>
      
    </div>

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
