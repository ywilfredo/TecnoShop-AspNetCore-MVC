@model ListaProductoViewModel;
@{
    ViewData["Title"] = "Home Page";
}

<section class="carousel slide" id="hero-carousel" data-bs-ride="carousel">
    <!--Indicadores-->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#hero-carousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#hero-carousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#hero-carousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>

    <!--Imagenes-->
    <div class="carousel-inner">
        <div class="carousel-item active c-item">
            <img src="~/assets/images/lap-1.jpg" class="d-block w-100 c-img" alt="laptop-1">

            <!--Texto sobre la imagen.  con top-o subir texto-->
            <div class="carousel-caption top-0 mt-4 d-sm d-md-block">
                <p class="fs-3">Tienda Online</p>
                <h1 class="display1 fw-bolder text-capitalize">Equipos de Escritorio</h1>
            </div>
        </div>
        <div class="carousel-item c-item">
            <img src="~/assets/images/lap-2.jpg" class="d-block w-100 c-img" alt="laptop-2">

            <div class="carousel-caption top-0 mt-4 d-sm d-md-block">
                <p class="fs-3">Tienda Online</p>
                <h1 class="display1 fw-bolder text-capitalize">Laptops de todo tipo</h1>
            </div>

        </div>
        <div class="carousel-item c-item">
            <img src="~/assets/images/lap-3.jpg" class="d-block w-100 c-img" alt="laptop-3">
            <div class="carousel-caption top-0 mt-4 d-sm d-md-block">
                <p class="fs-3">Tienda Online</p>
                <h1 class="display1 fw-bolder text-capitalize">Servicio Tecnico</h1>
            </div>
        </div>
    </div>

    <!--Botones controladores-->
    <button class="carousel-control-prev" type="button" data-bs-target="#hero-carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#hero-carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</section>

<!--Seccion de productos destacados-->
<div class="row text-center mt-5">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <h1>Productos Destacados</h1>
    </div>
</div>
<!-- Section-->
<div class="container d-flex justify-content-center mb-50">
    <div class="row seccion-productos">
        @foreach (var producto in Model.Productos)
        {
            <div class="col-md-4 col-sm-6  col-lg-3 mt-2">
                <div class="card">
                    <div class="card-body">
                        <div class="card-img-actions">
                            <img src="@producto.ImagenUrl" class="card-img img-fluid" alt="@producto.Nombre">
                        </div>
                    </div>
                    <div class="card-body bg-light text-center">
                        <div class="mb-2">
                            <h6 class="font-weight-semibold mb-2"> <a asp-controller="Producto" asp-action="DescripcionProducto" asp-route-id="@producto.ProductoId" class="text-default mb-2" data-abc="true">@producto.Nombre</a></h6>
                            <a href="#" class="text-muted" data-abc="true">@producto.Categoria.Nombre</a>

                        </div>
                        <h3 class="mb-0 font-weight-semibold">$@producto.Precio</h3>
                        <div class="estrellas">
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star-fill"></i>
                            <i class="bi bi-star"></i>
                        </div>
                        <div class="text-muted mb-3">34 reviews</div>
                        <a class="btn bg-cart" asp-controller="Producto" asp-action="DescripcionProducto" asp-route-id="@producto.ProductoId"><i class="bi bi-eye"></i> Ver Especificaciones</a>
                        
                    </div>
                </div>
            </div>

        }
    </div>
</div>