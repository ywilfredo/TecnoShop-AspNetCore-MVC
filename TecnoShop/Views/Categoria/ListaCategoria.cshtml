@model ListaCategoriaViewModel;

<section class="container seccion">
    <h1>Listado de Categorias</h1>

    <p>
        <a asp-controller="Categoria" asp-action="CrearCategoria" class="btn btn-success">Crear Categoria</a>
    </p>

    @*<form asp-controller="Usuarios" asp-action="Index">
    <p>
    Buscar: <input type="text" name="buscar" class="form-text" />
    <input type="submit" value="Buscar" class="btn btn-sm btn-dark" />
    </p>
    </form>*@


    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">CategoryName</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Categorias)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoriaId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.CategoriaId">Edit</a> |
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.CategoriaId">Details</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.CategoriaId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
