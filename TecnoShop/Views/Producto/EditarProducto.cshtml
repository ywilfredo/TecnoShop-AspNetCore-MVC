@model TecnoShop.ViewModels.ProductCreateViewModel
@{
    ViewData["Title"] = "EditarProducto";
}

<section class="container seccion">
    <h1>Editar Producto</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditarProducto" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ProductoId" />
                <input type="hidden" asp-for="ImagenUrl" />
                <img src="~/images/@Model.ImagenUrl" width="100" height="100" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Especificaciones" class="control-label"></label>
                    <textarea asp-for="Especificaciones" class="form-control" placeholder="escriba las especificaciones aquí.." id="floatingTextarea" style="height: 100px;"></textarea>
                    <span asp-validation-for="Especificaciones" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" accept="image/*" multiple>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-select sform-control" asp-items="Model.CategoriasItems"></select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MarcaId" class="control-label"></label>
                    <select asp-for="MarcaId" class="form-select sform-control" asp-items="Model.MarcasItems"></select>
                    <span asp-validation-for="MarcaId" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="Disponible" class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Disponible
                    </label>
                </div>
                <div class="form-group form-check">
                    <input asp-for="Destacado" class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Destacado
                    </label>
                </div>

                <br />

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index"> Atrás</a>
                </div>
            </form>

      </div>
    </div>

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
