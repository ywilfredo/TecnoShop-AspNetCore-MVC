
@model TecnoShop.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "CrearProducto";
}

<section class="container seccion">
    <h1>Crear Producto</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="CrearProducto" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Nombre" class="control-label"></label>
                    <input asp-for="@Model.Nombre" class="form-control" />
                    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Especificaciones" class="control-label"></label>
                    <textarea asp-for="@Model.Especificaciones" class="form-control" id="floatingTextarea" style="height: 100px;"></textarea>
                    <span asp-validation-for="@Model.Especificaciones" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="@Model.ArchivoImagen" accept="image/*" multiple>
                    <span asp-validation-for="@Model.ArchivoImagen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Precio" class="control-label"></label>
                    <input asp-for="@Model.Precio" type="number" value="" class="form-control" />
                    <span asp-validation-for="@Model.Precio" class="text-danger"></span>
                </div>

               <div class="form-group">
                    <label  class="control-label">Categoría</label>
                    <select asp-for="@Model.CategoriaId" class="form-select sform-control" asp-items="@Model.CategoriasItems">
                        <option value="">selecciona una categoria</option>
                    </select>
                    <span asp-validation-for="@Model.CategoriaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Marca</label>
                    <select asp-for="@Model.MarcaId" class="form-select sform-control" asp-items="@Model.MarcasItems">
                        <option value="">selecciona una marca</option>
                    </select>
                    <span asp-validation-for="@Model.MarcaId" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="@Model.Disponible" class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Disponible
                    </label>

                </div>
                <div class="form-group form-check">
                    <input asp-for="@Model.Destacado" class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Destacado
                    </label>
                </div>
  
                <br />

                <div class="form-group">
                    <input type="submit" value="Crear Producto" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index"> Atrás</a>
                </div>
            </form>

        </div>
    </div>

</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

